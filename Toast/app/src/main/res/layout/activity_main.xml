<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iwave.toast.MainActivity">

    <EditText
        android:id="@+id/mNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:hint="@string/enter_message_here"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/mDeployButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mNameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:onClick="onDisplay"
        android:text="@string/deploy_message" />

</RelativeLayout>
